<%= form_for @project do |f| %>
<div class="row">
  <div class="large-6 columns">
    <div class="main_form">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
      </div>
      <div class="field">
        <%= f.label :end_date %>
        <%= f.date_field :end_date %>
      </div>
      <div class="field">
        <%= f.label :funding_goal %>
        <%= f.number_field :funding_goal %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>   
    </div>
  </div>

  <div class="large-4 columns last">
    <h1>Rewards</h1>
    <div class="rewards_form">
      <%= f.fields_for :rewards do |reward_field| %>
      <%= render 'reward_fields', f: reward_field %>
      <% end %>
      <%= link_to_add_association "Add Reward", f, :rewards %>
    </div>
  </div>
</div>
<% end %>    
